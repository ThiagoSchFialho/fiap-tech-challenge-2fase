<%- include('index') %>

    <div class="blog-title-div">
      <p class="page-title">Professores</p>
      <a class="action-button" style="width: 205px;" href="/teacherForm">Cadastrar Professores</a>
    </div>

    <div class="blog-content">
      <div class="post-box">
      	<p class="teacher-header">Nome</p>
				<hr class="line-style"/>
        <% teachers.forEach(function(teacher) { %>
          <div class="div-display">
            <p class="teacher-name"><%= teacher.name %></p>
            <a class="teacher-button blue-button" href="/teacherForm/<%= teacher.id %>">Editar</a>
            <form action="/teachers/<%= teacher.id %>?_method=DELETE" method="POST">
              <button type="submit" class="posts-button red-button">Excluir</button>
            </form>
          </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>