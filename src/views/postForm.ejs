<%- include('index') %>

    <div class="blog-title-div">
      <p class="page-title"><%= title %></p>
    </div>

    <div class="blog-content">
      <% if (isEdit) { %>
        <form action="<%= formAction %>" method="POST">
          <input type="hidden" name="_method" value="PUT">
      <% } else {%>
        <form action="<%= formAction %>" method="POST">
      <% }%>

        <div class="post-box">
          <div class="input-group">
            <input id="title" type="text" name="title" autocomplete="off" class="input" value="<%= post ? post.title : '' %>" required>
            <label for="title" class="field-label">Título</label>
          </div>
          <div class="input-group">
            <input id="teacherId" type="text" name="teacherId" autocomplete="off" class="input" value="<%= post ? post.teacherId : '' %>" required>
            <label for="teacherId" class="field-label">Professor</label>
          </div>
          <div class="input-group">
            <input id="content" type="text" name="content" autocomplete="off" class="input" value="<%= post ? post.content : '' %>" required>
            <label for="content" class="field-label">Conteúdo</label>
          </div>
          <button type="submit" class="create-button"><%= isEdit ? 'Salvar' : 'Criar' %></button>
        </div>
      </form>
    </div>
  </body>
</html>